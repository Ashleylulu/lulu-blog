/* miniprogram/pages/index/index.wxss */


/*轮播图*/
.swiper-con{
    width: 100%;
    height: 400rpx;
    position: relative;
}
.swiper-con swiper{
    height: 100%;
}
.swiper-con image{
    width: 100%;
    height: 100%;
}

.swiper-tit{
    position: absolute;
    bottom: 50px;
    left: 15px;
    color: #666;
    background: #fff;
    padding: 5px;
    border-radius: 5px 5px;
}
.swiper-intro{
    bottom: 12px;
    background: none;
    font-size: 20px;
    color: #fff;
}
.today-recommend {
    background: #fff;
    color: #333;
    height: 120rpx;
    font-size: 36rpx;
    line-height: 120rpx;
    text-align: left;
    padding: 10px;
}
.today-recommend text{
    width: 100%;
    height: 100%;
}

/*文章列表*/
.card-img{
    width: 90%;
    border-radius: 20px 20px;
    margin: 0 auto;
}
.padding-lr{
    padding: 0;
}
